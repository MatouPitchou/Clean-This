{% apply inline_css %}
<style>
	span {
		color: #01A9B4;
	}
	img {
		width: 50px;
	}
	* {
    font-family: Arial, Helvetica, sans-serif;
}
</style>

<h1>{{ 'Hello'|trans({}, 'mails')}} {{ firstname }},</h1>

<p>{{ 'linkResetPassRequest'|trans({}, 'mails')}} :</p>

<a href="{{ url('app_reset_password', {token: resetToken.token}) }}">{{ url('app_reset_password', {token: resetToken.token}) }}</a>

<p> {{ 'linkExpiresIn'|trans({}, 'mails')}} {{ resetToken.expirationMessageKey|trans(resetToken.expirationMessageData, 'ResetPasswordBundle') }}.</p>

<p>{{ 'thankYou'|trans({}, 'mails')}}</p>
<h3>{{ 'from'|trans({}, 'mails')}} <span>Clean This</span></h3>
<img src="{{ email.image('@images/black_logo2.png') }}" alt="Logo">
{% endapply %}

